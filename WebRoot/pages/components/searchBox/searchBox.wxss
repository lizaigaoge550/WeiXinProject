/* pages/components/searchBox/searchBox.wxss */
.search-box{
  width:100%;
  height:80rpx;
  padding: 15rpx 0;
  box-sizing: border-box;
  background-color: #FF8F1F;
  position: relative;
}
.search-box .icon{
 position:absolute;
 top:50%;
 left:3%;
 transform: translateY(-50%);
}
.search-box .content{
  background:#fff;
  width:90%;
  height:50rpx;
  margin:0 auto;
  border-radius: 50rpx;
  padding-left:50rpx;
  font-size:28rpx;
}